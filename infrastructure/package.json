{
    "name": "infrastructure",
    "scripts": {
        "build": "npm run test && npm run prettier",
        "cdk": "cdk",
        "clean": "rm -fr node_modules cdk.out",
        "prettier": "prettier --check '{lib,tst}/**/*.ts'",
        "prettier-fix": "prettier --write '{lib,tst}/**/*.ts'",
        "test": "echo jest"
    },
    "dependencies": {
        "aws-cdk-lib": "^2.41.0",
        "constructs": "^10.1.97"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^18.7.16",
        "jest": "^28.1.3",
        "prettier": "2.7.1",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "semi": true,
        "singleQuote": true
    },
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "collectCoverageFrom": [
            "lib/**/*.ts"
        ],
        "coverageReporters": [
            "cobertura",
            "json",
            "text"
        ]
    }
}