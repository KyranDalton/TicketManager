{
    "name": "backend",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run test && webpack && npm run prettier",
        "clean": "rm -fr dist node_modules",
        "prettier": "prettier --check '{src,tst}/**/*.ts'",
        "prettier-fix": "prettier --write '{src,tst}/**/*.ts'",
        "test": "jest"
    },
    "dependencies": {
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.104",
        "@types/jest": "^29.0.3",
        "@types/node": "^18.7.18",
        "aws-lambda": "^1.0.7",
        "jest": "^29.0.3",
        "prettier": "2.7.1",
        "ts-jest": "^29.0.1",
        "ts-loader": "^9.4.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "semi": true,
        "singleQuote": true
    },
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageReporters": [
            "cobertura",
            "json",
            "text"
        ]
    }
}
